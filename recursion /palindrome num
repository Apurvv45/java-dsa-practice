class Solution {
    public boolean isPalindrome(int x) {

        if (x < 0) return false;

        int original = x;
        int revnum = 0;

        while (x != 0) {
            revnum = revnum * 10 + x % 10;
            x /= 10;
        }

        if(original == revnum){
             return true;
        }
     else{
       return false;
     }
  }
}
